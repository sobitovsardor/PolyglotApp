<Page x:Class="PolyglotApp.Desktop.Pages.DictionaryWordsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DictionaryWordsPage"
      Background="White">

    <Page.Resources>
        <!-- Word Card Style -->
        <Style x:Key="WordCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="2" Opacity="0.08"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#BBBBBB"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="3" Opacity="0.12"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Language Label Style -->
        <Style x:Key="LanguageLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Word Text Style -->
        <Style x:Key="WordTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111111"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Pronunciation Style -->
        <Style x:Key="PronunciationStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Description Style -->
        <Style x:Key="DescriptionStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#444444"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="LineHeight" Value="20"/>
        </Style>

        <!-- Description Label Style -->
        <Style x:Key="DescriptionLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Top Navigation Bar -->
        <Grid Height="80" 
              VerticalAlignment="Top"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="40,0,0,0">
                <Ellipse Width="35" 
                         Height="35" 
                         Fill="#333333"/>
                <TextBlock Text="P" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="-27,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Center Navigation Menu with Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Home Button -->
                <Button x:Name="HomeButton"
                        Width="120" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="#333333" 
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"
                        Background="White"
                        Click="BackToHome_Click"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Content>
                        <TextBlock Text="🏠 Home"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#333333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Dictionary Button (Active) -->
                <Button x:Name="DictionaryButton"
                        Width="150" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="White" 
                        BorderThickness="0"
                        Background="#2C2C2C"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Content>
                        <TextBlock Text="📚 Dictionary"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Game Button -->
                <Button x:Name="GameButton"
                        Width="140" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="White" 
                        BorderThickness="0"
                        Background="#8B7355"
                        Click="GamePage_Click"
                        Cursor="Hand">
                    <Button.Content>
                        <TextBlock Text="🎮 Games"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#6F5B42"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Menu Icon -->
            <Border Grid.Column="2" 
                    Width="35" 
                    Height="35"
                    Background="Transparent" 
                    BorderBrush="#DDDDDD"
                    BorderThickness="1" 
                    CornerRadius="8"
                    Cursor="Hand" 
                    Margin="0,0,40,0"
                    VerticalAlignment="Center">
                <TextBlock Text="☰" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" 
                           Foreground="#333333"/>
            </Border>
        </Grid>

        <!-- Main Content Area with ScrollViewer -->
        <ScrollViewer Margin="0,80,0,0" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="0,0,0,100">
            <Grid Margin="0,0,0,0">
                <!-- Header Section -->
                <StackPanel VerticalAlignment="Top" 
                           Margin="40,40,40,40"
                           HorizontalAlignment="Center"
                           MaxWidth="1100">
                    <TextBlock FontSize="18" 
                               Foreground="#999999"
                               TextAlignment="Left"
                               Margin="0,0,0,10">
                        <Run Text="expand your" 
                             Foreground="#333333" 
                             FontWeight="SemiBold"/>
                        <Run Text="vocabulary."/>
                    </TextBlock>

                    <TextBlock Text="Dictionary Words"
                               FontSize="42"
                               FontWeight="Bold" 
                               Foreground="#111111"
                               TextAlignment="Left"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Learn vocabulary in 4 languages with pronunciation and detailed descriptions."
                               FontSize="16"
                               Foreground="#666666" 
                               TextWrapping="Wrap"
                               LineHeight="24"
                               TextAlignment="Left"
                               MaxWidth="700"/>
                </StackPanel>

                <!-- Words List Container -->
                <StackPanel Margin="40,180,40,40"
                           HorizontalAlignment="Center"
                           MaxWidth="1100">
                    <ItemsControl ItemsSource="{Binding Words}">
                        <!-- ItemsPanel - VirtualizingStackPanel for better performance -->
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Vertical"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <!-- ItemTemplate -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <!-- Word Card -->
                                <Border Style="{StaticResource WordCardStyle}"
                                       Width="Auto"
                                       Height="Auto">
                                    <StackPanel>
                                        <!-- Words and Pronunciations - 4 Columns -->
                                        <Grid Margin="0,0,0,25">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- English Column -->
                                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                                <TextBlock Text="🇺🇸 ENGLISH" Style="{StaticResource LanguageLabelStyle}"/>
                                                <TextBlock Text="{Binding Eng.Text}" Style="{StaticResource WordTextStyle}"/>
                                                <TextBlock Text="{Binding Eng.Pronounce}" Style="{StaticResource PronunciationStyle}"/>
                                            </StackPanel>

                                            <!-- Uzbek Column -->
                                            <StackPanel Grid.Column="1" Margin="0,0,20,0">
                                                <TextBlock Text="🇺🇿 O'ZBEK" Style="{StaticResource LanguageLabelStyle}"/>
                                                <TextBlock Text="{Binding Uz.Text}" Style="{StaticResource WordTextStyle}"/>
                                                <TextBlock Text="{Binding Uz.Pronounce}" Style="{StaticResource PronunciationStyle}"/>
                                            </StackPanel>

                                            <!-- Russian Column -->
                                            <StackPanel Grid.Column="2" Margin="0,0,20,0">
                                                <TextBlock Text="🇷🇺 РУССКИЙ" Style="{StaticResource LanguageLabelStyle}"/>
                                                <TextBlock Text="{Binding Ru.Text}" Style="{StaticResource WordTextStyle}"/>
                                                <TextBlock Text="{Binding Ru.Pronounce}" Style="{StaticResource PronunciationStyle}"/>
                                            </StackPanel>

                                            <!-- German Column -->
                                            <StackPanel Grid.Column="3">
                                                <TextBlock Text="🇩🇪 DEUTSCH" Style="{StaticResource LanguageLabelStyle}"/>
                                                <TextBlock Text="{Binding De.Text}" Style="{StaticResource WordTextStyle}"/>
                                                <TextBlock Text="{Binding De.Pronounce}" Style="{StaticResource PronunciationStyle}"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Separator Line -->
                                        <Border Height="1" 
                                                Background="#EEEEEE" 
                                                Margin="0,0,0,20"/>

                                        <!-- Descriptions -->
                                        <StackPanel>
                                            <!-- English Description -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <TextBlock Text="🇺🇸" Style="{StaticResource DescriptionLabelStyle}"/>
                                                <TextBlock Text="{Binding Eng.Description}" Style="{StaticResource DescriptionStyle}"/>
                                            </StackPanel>

                                            <!-- Uzbek Description -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <TextBlock Text="🇺🇿" Style="{StaticResource DescriptionLabelStyle}"/>
                                                <TextBlock Text="{Binding Uz.Description}" Style="{StaticResource DescriptionStyle}"/>
                                            </StackPanel>

                                            <!-- Russian Description -->
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                                <TextBlock Text="🇷🇺" Style="{StaticResource DescriptionLabelStyle}"/>
                                                <TextBlock Text="{Binding Ru.Description}" Style="{StaticResource DescriptionStyle}"/>
                                            </StackPanel>

                                            <!-- German Description -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🇩🇪" Style="{StaticResource DescriptionLabelStyle}"/>
                                                <TextBlock Text="{Binding De.Description}" Style="{StaticResource DescriptionStyle}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Bottom Section (Black Bar) -->
        <Grid Height="100" 
              VerticalAlignment="Bottom" 
              Background="#1A1A1A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Author/Creator Info -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="40,0,0,0">
                <Ellipse Width="45" 
                         Height="45" 
                         Fill="#555555"
                         Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="None Group" 
                               FontSize="12"
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="UX/UI DESIGNER AND INTERACTIVE DEVELOPER"
                               FontSize="9" 
                               Foreground="#888888"/>
                </StackPanel>
            </StackPanel>

            <!-- Navigation Info -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="0,0,40,0">
                <Ellipse Width="8" Height="8" Fill="#666666" Margin="0,0,8,0"/>
                <Ellipse Width="8" Height="8" Fill="#666666" Margin="0,0,8,0"/>
                <Ellipse Width="8" Height="8" Fill="White" Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>