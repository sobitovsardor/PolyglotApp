<Page x:Class="PolyglotApp.Desktop.Pages.TestExecutionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Test Execution"
      Background="White">

    <Page.Resources>
        <!-- Test Card Style -->
        <Style x:Key="TestCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="30"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" 
                                      ShadowDepth="3" 
                                      Color="Black" 
                                      Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Option Button Style -->
        <Style x:Key="OptionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F0FE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Top Navigation Bar -->
        <Grid Height="80" 
              VerticalAlignment="Top"
              Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="40,0,0,0"
                        Cursor="Hand">
                <Ellipse Width="35" 
                         Height="35" 
                         Fill="#333333"/>
                <TextBlock Text="P" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="-27,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Center Navigation Menu -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Home Button -->
                <Button x:Name="HomeButton"
                        Width="120" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="#333333" 
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"
                        Background="White"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Content>
                        <TextBlock Text="🏠 Home"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="#333333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Dictionary Button -->
                <Button x:Name="DictionaryButton"
                        Width="150" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="White" 
                        BorderThickness="0"
                        Background="#2C2C2C"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Content>
                        <TextBlock Text="📚 Dictionary"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Game Button -->
                <Button x:Name="GameButton"
                        Width="140" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="White" 
                        BorderThickness="0"
                        Background="#8B7355"
                        Cursor="Hand">
                    <Button.Content>
                        <TextBlock Text="🎮 Games"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#6F5B42"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Menu Icon -->
            <Border Grid.Column="2" 
                    Width="35" 
                    Height="35"
                    Background="Transparent" 
                    BorderBrush="#DDDDDD"
                    BorderThickness="1" 
                    CornerRadius="8"
                    Cursor="Hand" 
                    Margin="0,0,40,0"
                    VerticalAlignment="Center">
                <TextBlock Text="☰" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" 
                           Foreground="#333333"/>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="0,80,0,100">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        MaxWidth="600">

                <!-- Progress and Timer Header -->
                <Border Style="{StaticResource TestCardStyle}"
                        Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Progress Info -->
                        <StackPanel Orientation="Horizontal" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="📝 Question" 
                                       FontSize="15"
                                       Foreground="#666666"/>
                            <TextBlock Text=" " FontSize="15"/>
                            <TextBlock Text="{Binding CurrentIndexDisplay}" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Foreground="#333333"
                                       Margin="5,0,5,0"/>
                            <TextBlock Text="of" 
                                       FontSize="15"
                                       Foreground="#666666"
                                       Margin="5,0,5,0"/>
                            <TextBlock Text="{Binding TotalQuestions}" 
                                       FontSize="16" 
                                       FontWeight="Medium"
                                       Foreground="#333333"/>
                        </StackPanel>

                        <!-- Timer -->
                        <Border Grid.Column="1" 
                                Background="#4A90E2"
                                CornerRadius="20" 
                                Padding="15,8"
                                BorderThickness="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⏱️" 
                                           FontSize="14" 
                                           Foreground="White"
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding TimeLeft}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="White"/>
                                <TextBlock Text="s" 
                                           FontSize="14" 
                                           Foreground="White"
                                           Margin="2,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Question Card -->
                <Border Style="{StaticResource TestCardStyle}"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="Translate this word:" 
                                   FontSize="15"
                                   Foreground="#666666" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding CurrentQuestion.WordText}" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   TextAlignment="Center" 
                                   Foreground="#111111"
                                   Margin="0,10,0,30"/>

                        <TextBlock Text="Select the correct translation:" 
                                   FontSize="15"
                                   Foreground="#666666" 
                                   Margin="0,0,0,15"/>
                    </StackPanel>
                </Border>

                <!-- Options Grid -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Row 1 -->
                    <Button Grid.Row="0" Grid.Column="0"
                            Style="{StaticResource OptionButtonStyle}"
                            Margin="0,0,10,15"
                            Content="{Binding CurrentOptions[0]}"
                            Click="OptionButton_Click"/>

                    <Button Grid.Row="0" Grid.Column="1"
                            Style="{StaticResource OptionButtonStyle}"
                            Margin="10,0,0,15"
                            Content="{Binding CurrentOptions[1]}"
                            Click="OptionButton_Click"/>

                    <!-- Row 2 -->
                    <Button Grid.Row="1" Grid.Column="0"
                            Style="{StaticResource OptionButtonStyle}"
                            Margin="0,15,10,0"
                            Content="{Binding CurrentOptions[2]}"
                            Click="OptionButton_Click"/>

                    <Button Grid.Row="1" Grid.Column="1"
                            Style="{StaticResource OptionButtonStyle}"
                            Margin="10,15,0,0"
                            Content="{Binding CurrentOptions[3]}"
                            Click="OptionButton_Click"/>
                </Grid>

                <!-- Instruction -->
                <TextBlock Text="💡 Click on the correct translation to continue" 
                           FontSize="14"
                           Foreground="#888888" 
                           TextAlignment="Center"
                           Margin="0,25,0,0"
                           FontStyle="Italic"/>

            </StackPanel>
        </Grid>

        <!-- Bottom Section (Black Bar) -->
        <Grid Height="100" 
              VerticalAlignment="Bottom" 
              Background="#1A1A1A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Author/Creator Info -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="40,0,0,0">
                <Ellipse Width="45" 
                         Height="45" 
                         Fill="#555555"
                         Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Sobitov Sardor" 
                               FontSize="12"
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="UX/UI DESIGNER AND INTERACTIVE DEVELOPER"
                               FontSize="9" 
                               Foreground="#888888"/>
                </StackPanel>
            </StackPanel>

            <!-- Navigation Info -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="0,0,40,0">
                <Ellipse Width="8" Height="8" Fill="#666666" Margin="0,0,8,0"/>
                <Ellipse Width="8" Height="8" Fill="White" Margin="0,0,8,0"/>
                <Ellipse Width="8" Height="8" Fill="#666666"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

