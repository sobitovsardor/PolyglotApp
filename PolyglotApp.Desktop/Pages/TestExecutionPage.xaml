<Page x:Class="PolyglotApp.Desktop.Pages.TestExecutionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Test Execution">

    <Grid Background="White" Margin="20">
        <StackPanel Width="520" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Info line -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Question:" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding CurrentIndexDisplay}" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="/" FontSize="16" Margin="3,0"/>
                <TextBlock Text="{Binding TotalQuestions}" FontSize="16"/>
                <TextBlock Text="   Time left:" FontSize="16" Margin="20,0,5,0"/>
                <TextBlock Text="{Binding TimeLeft}" FontSize="16" Foreground="Red"/>
                <TextBlock Text="s" FontSize="16" Margin="3,0,0,0"/>
            </StackPanel>

            <!-- Question -->
            <TextBlock Text="{Binding CurrentQuestion.WordText}" 
                       FontSize="24" FontWeight="Bold" 
                       TextAlignment="Center" Margin="0,10,0,20"/>

            <!-- Options -->
            <ItemsControl ItemsSource="{Binding CurrentOptions}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" Margin="5" Padding="10" FontSize="16"
                                Click="OptionButton_Click"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Grid>
</Page>


