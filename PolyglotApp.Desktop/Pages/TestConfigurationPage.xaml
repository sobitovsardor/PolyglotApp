<Page x:Class="PolyglotApp.Desktop.Pages.TestConfigurationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TestConfigurationPage">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Test Configuration"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>

            <!-- From Language -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="From:" Width="80" VerticalAlignment="Center"/>
                <ComboBox Width="150"
                          ItemsSource="{Binding Languages}"
                          SelectedItem="{Binding FromLanguage}" />
            </StackPanel>

            <!-- To Language -->
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Text="To:" Width="80" VerticalAlignment="Center"/>
                <ComboBox Width="150"
                          ItemsSource="{Binding Languages}"
                          SelectedItem="{Binding ToLanguage}" />
            </StackPanel>

            <!-- Difficulty -->
            <StackPanel Orientation="Horizontal" Margin="0,15">
                <TextBlock Text="Difficulty:" Width="80" VerticalAlignment="Center"/>
                <ComboBox Width="150"
                          ItemsSource="{Binding Difficulties}"
                          SelectedItem="{Binding Difficulty}" />
            </StackPanel>

            <!-- Start Button -->
            <Button Content="Start Test"
                    Width="200"
                    Height="40"
                    Margin="0,20,0,0"
                    Background="#4A90E2"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="StartTest_Click"/>
        </StackPanel>
    </Grid>
</Page>
