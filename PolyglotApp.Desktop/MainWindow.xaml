<Window x:Class="PolyglotApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolyglotApp"
        Height="800"
        Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        Background="White">
    <Grid>
        <!-- Top Navigation Bar -->
        <Grid Height="80" 
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center"
                        Margin="40,0,0,0">
                <Ellipse Width="35" 
                         Height="35" 
                         Fill="#333333"/>
                <TextBlock Text="P" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="-27,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Center Navigation Menu with Buttons -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Home Button -->
                <Button x:Name="HomeButton"
                        Width="120" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="#333333" 
                        BorderThickness="1"
                        BorderBrush="#DDDDDD"
                        Background="White"
                        Click="BackToHome_Click"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Content>
                        <TextBlock Text="🏠 Home"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#F5F5F5"/>
                                    <Setter TargetName="border" 
                                            Property="BorderBrush" 
                                            Value="#333333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Dictionary Button -->
                <Button x:Name="DictionaryButton"
                        Width="150" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="White" 
                        BorderThickness="0"
                        Background="#2C2C2C"
                        Click="DictionaryPage_Click"
                        Cursor="Hand"
                        Margin="0,0,15,0">
                    <Button.Content>
                        <TextBlock Text="📚 Dictionary"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#1A1A1A"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" 
                                                              ShadowDepth="0"
                                                              Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Game Button -->
                <Button x:Name="GameButton"
                        Width="140" 
                        Height="45"
                        FontSize="15" 
                        FontWeight="Medium"
                        Foreground="White" 
                        BorderThickness="0"
                        Background="#8B7355"
                        Click="GamePage_Click"
                        Cursor="Hand">
                    <Button.Content>
                        <TextBlock Text="🎮 Games"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="22"
                                    Padding="15,8">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#6F5B42"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="10" 
                                                              ShadowDepth="0"
                                                              Opacity="0.3"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- Menu Icon -->
            <Border Grid.Column="2" 
                    Width="35" 
                    Height="35"
                    Background="Transparent" 
                    BorderBrush="#DDDDDD"
                    BorderThickness="1" 
                    CornerRadius="8"
                    Cursor="Hand" 
                    Margin="0,0,40,0"
                    VerticalAlignment="Center">
                <TextBlock Text="☰" 
                           FontSize="18" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" 
                           Foreground="#333333"/>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Margin="0,80,0,100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="600"/>
            </Grid.ColumnDefinitions>

            <!-- Left Content -->
            <StackPanel Grid.Column="0" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left" 
                        Margin="80,0,0,0">
                <TextBlock FontSize="18" 
                           Foreground="#999999"
                           Margin="0,0,0,10">
                    <Run Text="real" 
                         Foreground="#333333" 
                         FontWeight="SemiBold"/>
                    <Run Text="reason."/>
                </TextBlock>

                <TextBlock Text="PolyglotApp"
                           FontSize="56"
                           FontWeight="Bold" 
                           Foreground="#111111"
                           LineHeight="65" 
                           Margin="0,0,0,30"/>

                <TextBlock Text="Master multiple languages with innovative learning methods and interactive experiences."
                           FontSize="16"
                           Foreground="#666666" 
                           TextWrapping="Wrap"
                           LineHeight="26" 
                           MaxWidth="400"
                           HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- Right Side - Background Image Area -->
            <Grid Grid.Column="1" 
                  Margin="40,0,60,0">
                <!-- Background Image (replaceable) -->
                <Border CornerRadius="20" 
                        ClipToBounds="True"
                        Background="#F5F5F5">
                    <!-- Placeholder for background image -->
                    <Grid>
                        <!-- You can replace this with actual Image control -->
                        <!-- <Image Source="YourImagePath.jpg" Stretch="UniformToFill"/> -->

                        <!-- Decorative Circle -->
                        <Ellipse Width="200" 
                                 Height="200"
                                 Fill="#E0E0E0" 
                                 Opacity="0.3"
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Top"
                                 Margin="0,-50,-50,0"/>

                        <!-- Center Object Placeholder (like the candle in reference) -->
                        <Border Width="180" 
                                Height="250"
                                Background="#8B7355" 
                                CornerRadius="10"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="20" 
                                                  ShadowDepth="0"
                                                  Opacity="0.3"/>
                            </Border.Effect>

                            <!-- Decorative rope/string effect -->
                            <Rectangle Fill="#D4AF37" 
                                       Width="2" 
                                       Height="200"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Top flame/accent -->
                        <Ellipse Width="8" 
                                 Height="40" 
                                 Fill="#FFD700"
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Top"
                                 Margin="0,80,0,0">
                            <Ellipse.Effect>
                                <BlurEffect Radius="8"/>
                            </Ellipse.Effect>
                        </Ellipse>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Section (Black Bar with Author Info) -->
        <Grid Height="100" 
              VerticalAlignment="Bottom" 
              Background="#1A1A1A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Author/Creator Info -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="40,0,0,0">
                <Ellipse Width="45" 
                         Height="45" 
                         Fill="#555555"
                         Margin="0,0,15,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="None Group" 
                               FontSize="12"
                               FontWeight="SemiBold" 
                               Foreground="White"/>
                    <TextBlock Text="UX/UI DESIGNER AND INTERACTIVE DEVELOPER"
                               FontSize="9" 
                               Foreground="#888888"/>
                </StackPanel>
            </StackPanel>

            <!-- Social Icons -->
            <StackPanel Grid.Column="2" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="0,0,30,0">
                <Border Width="35" 
                        Height="35" 
                        Background="Transparent"
                        BorderBrush="#444444" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Margin="0,0,10,0" 
                        Cursor="Hand">
                    <TextBlock Text="📷" 
                               FontSize="16"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
                <Border Width="35" 
                        Height="35" 
                        Background="Transparent"
                        BorderBrush="#444444" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Cursor="Hand">
                    <TextBlock Text="↗" 
                               FontSize="16" 
                               Foreground="White"
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- Navigation Dots and Arrow Navigation -->
            <StackPanel Grid.Column="3" 
                        Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Margin="0,0,40,0">
                <Ellipse Width="8" 
                         Height="8" 
                         Fill="#666666"
                         Margin="0,0,8,0"/>
                <Ellipse Width="8" 
                         Height="8" 
                         Fill="#666666"
                         Margin="0,0,8,0"/>
                <Ellipse Width="8" 
                         Height="8" 
                         Fill="White"
                         Margin="0,0,20,0"/>

                <!-- Arrow Navigation - Previous -->
                <Button x:Name="PreviousButton"
                        Width="30" 
                        Height="30" 
                        Background="Transparent"
                        BorderBrush="#444444" 
                        BorderThickness="1"
                        Cursor="Hand"
                        Margin="0,0,8,0">
                    <Button.Content>
                        <TextBlock Text="‹" 
                                   FontSize="18" 
                                   Foreground="White"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#333333"/>
                                    <Setter TargetName="border" 
                                            Property="BorderBrush" 
                                            Value="#666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Arrow Navigation - Next -->
                <Button x:Name="NextButton"
                        Width="30" 
                        Height="30" 
                        Background="Transparent"
                        BorderBrush="#444444" 
                        BorderThickness="1"
                        Cursor="Hand"
                        Margin="0,0,0,0">
                    <Button.Content>
                        <TextBlock Text="›" 
                                   FontSize="18" 
                                   Foreground="White"/>
                    </Button.Content>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="15">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" 
                                            Property="Background" 
                                            Value="#333333"/>
                                    <Setter TargetName="border" 
                                            Property="BorderBrush" 
                                            Value="#666666"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Back Button (Hidden initially) -->
        <Button x:Name="BackButton"
                Width="100" 
                Height="40"
                FontSize="14" 
                FontWeight="Medium"
                Background="White"
                Foreground="#333333" 
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="40,40,0,0"
                Cursor="Hand"
                Click="BackToHome_Click"
                Visibility="Collapsed">
            <Button.Content>
                <TextBlock Text="← Back"/>
            </Button.Content>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="20"
                            Padding="15,8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" 
                                              ShadowDepth="0"
                                              Opacity="0.1"/>
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Main Frame (Hidden initially) -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Visibility="Collapsed"/>
    </Grid>
</Window>