<Window x:Class="PolyglotApp.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PolyglotApp"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Grid>
        <!-- Gradient Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0.0" />
                <GradientStop Color="#764ba2" Offset="0.5" />
                <GradientStop Color="#f093fb" Offset="1.0" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Background Circles -->
        <Canvas>
            <Ellipse Width="200" Height="200" 
                     Canvas.Left="50" Canvas.Top="100"
                     Fill="#40FFFFFF" 
                     Opacity="0.6"/>

            <Ellipse Width="150" Height="150" 
                     Canvas.Right="80" Canvas.Bottom="150"
                     Fill="#30FFFFFF"
                     Opacity="0.4"/>

            <Ellipse Width="100" Height="100" 
                     Canvas.Left="700" Canvas.Top="50"
                     Fill="#20FFFFFF"
                     Opacity="0.3"/>
        </Canvas>

        <!-- Title Bar -->
        <Border Height="40" 
                VerticalAlignment="Top" 
                Background="#20000000"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <TextBlock Text="PolyglotApp" 
                           FontSize="14" 
                           FontWeight="Medium"
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           Margin="15,0,0,0"/>

                <!-- Window Control Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,5,0">

                    <!-- Minimize Button -->
                    <Button x:Name="MinimizeButton"
                            Content="─"
                            Width="46" Height="32"
                            FontSize="12" FontWeight="Bold"
                            Background="Transparent"
                            Foreground="White" BorderThickness="0"
                            Cursor="Hand"
                            Click="MinimizeButton_Click"
                            ToolTip="Minimize"
                            Margin="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#30FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Maximize/Restore Button -->
                    <Button x:Name="MaximizeRestoreButton"
                            Content="□"
                            Width="46" Height="32"
                            FontSize="12" FontWeight="Bold"
                            Background="Transparent"
                            Foreground="White" BorderThickness="0"
                            Cursor="Hand"
                            Click="MaximizeRestoreButton_Click"
                            ToolTip="Maximize"
                            Margin="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#30FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Close Button -->
                    <Button Content="✕"
                            Width="46" Height="32"
                            FontSize="12" FontWeight="Bold"
                            Background="Transparent"
                            Foreground="White" BorderThickness="0"
                            Cursor="Hand"
                            Click="CloseApp_Click"
                            ToolTip="Close Application"
                            Margin="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#50FF0000"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area with margin for title bar -->
        <Grid Margin="0,40,0,0">
            <!-- WELCOME CARD - Full Screen -->
            <Border x:Name="WelcomeCard"
                    Padding="40"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Border.Background>
                    <SolidColorBrush Color="Transparent"/>
                </Border.Background>

                <!-- Centered Content -->
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Glass Card Container -->
                    <Border Background="#20FFFFFF" 
                            CornerRadius="20" 
                            Padding="50"
                            BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.3"/>
                        </Border.BorderBrush>
                        <Border.Effect>
                            <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="10" Opacity="0.2"/>
                        </Border.Effect>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Logo -->
                            <Border Background="#20FFFFFF" 
                            CornerRadius="50" 
                            Width="100" Height="100" 
                            Margin="0,0,0,30">
                                <TextBlock Text="🌍" 
                                   FontSize="48" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   Margin="0,0,0,18"/>
                            </Border>

                            <TextBlock Text="PolyglotApp"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="White"
                               TextAlignment="Center"
                               Margin="0,0,0,10"/>

                            <TextBlock Text="Master 4 Languages with Style"
                               FontSize="16"
                               Foreground="#E0FFFFFF"
                               TextAlignment="Center"
                               Margin="0,0,0,40"/>

                            <!-- Dictionary Button -->
                            <Button x:Name="DictionaryButton"
                            Content="📚 Dictionary Learning"
                            Width="280" Height="60"
                            FontSize="18" FontWeight="SemiBold"
                            Margin="0,15" Cursor="Hand"
                            Foreground="White" BorderThickness="0"
                            Click="DictionaryPage_Click">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#667eea" Offset="0"/>
                                        <GradientStop Color="#764ba2" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="12"
                                        Padding="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="Black" Opacity="0.3"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Game Button -->
                            <Button x:Name="GameButton"
                            Content="🎮 Interactive Games"
                            Width="280" Height="60"
                            FontSize="18" FontWeight="SemiBold"
                            Margin="0,15" Cursor="Hand"
                            Foreground="White" BorderThickness="0"
                            Click="GamePage_Click">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#f093fb" Offset="0"/>
                                        <GradientStop Color="#f5576c" Offset="1"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="ButtonBorder"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="12"
                                        Padding="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="Black" Opacity="0.3"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <TextBlock Text="Choose your learning path above"
                                       FontSize="12"
                                       Foreground="#B0FFFFFF"
                                       TextAlignment="Center"
                                       Margin="0,20,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- MAIN FRAME -->
            <Frame x:Name="MainFrame"
                   NavigationUIVisibility="Hidden"
                   Visibility="Collapsed" />

            <!-- Back Button -->
            <Button x:Name="BackButton"
                    Content="← Back"
                    Width="80" Height="35"
                    FontSize="14" FontWeight="Medium"
                    Background="#30FFFFFF"
                    Foreground="White" BorderThickness="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="15" Cursor="Hand"
                    Click="BackToHome_Click"
                    Visibility="Collapsed">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>